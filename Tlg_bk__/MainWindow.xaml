        <Button x:Name="btn_autorization" Content="Авторизация" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Width="133" Click="btn_autorization_Click"/>
        <TextBox x:Name="tb_code" HorizontalAlignment="Left" Height="23" Margin="10,8,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="133"/>
