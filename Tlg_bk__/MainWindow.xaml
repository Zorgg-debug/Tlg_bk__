        <Button x:Name="tb_stop" Content="Стоп автомат" HorizontalAlignment="Left" Margin="10,170,0,0" VerticalAlignment="Top" Width="133" Click="tb_stop_Click"/>
        <Label x:Name="lb_status" Content="" HorizontalAlignment="Left" Margin="10,127,0,0" VerticalAlignment="Top" Width="133" Background="#00000000"/>

    </Grid>
</Window>
